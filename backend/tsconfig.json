{
        "compilerOptions": {
          "target": "ES2020",
          "module": "NodeNext",
          "moduleResolution": "NodeNext",
          "outDir": "./dist",
          "rootDir": "./src",
          "strict": true,
          "esModuleInterop": true,
          "skipLibCheck": true,
          "types": ["node", "express"],
          "typeRoots": ["./node_modules/@types"],
          "resolveJsonModule": true
        },
        "ts-node": {
          "esm": true
        },
        "include": ["src/**/*"],
        "exclude": ["node_modules", "**/*.spec.ts", "frontend"]
      }